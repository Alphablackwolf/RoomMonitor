@model IEnumerable<RoomMonitor.Models.Room>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultStartMinutes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEndDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimerIsGoing)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultStartMinutes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentEndDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimerIsGoing)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
